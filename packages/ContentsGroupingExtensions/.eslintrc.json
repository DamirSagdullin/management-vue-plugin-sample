{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest/globals": true
    },
    "parserOptions": {
        "parser": "babel-eslint",
        "sourceType": "module",
        "ecmaVersion": 8
    },
    "plugins": ["jest"],
    "extends": [
        "plugin:vue/essential",
        "eslint:recommended",
        "plugin:jest/recommended",
        "plugin:prettier/recommended",
        "plugin:storybook/recommended"
    ],
    "rules": {
        "no-console": "warn",
        "no-var": "error",
        "prefer-const": "error"
    }
}
